{
    "appId": "com.tallyinsight.dashboard",
    "productName": "TallyInsight Dashboard",
    "directories": {
        "output": "dist",
        "buildResources": "build"
    },
    "files": [
        "electron/**/*",
        "out/**/*",
        "package.json",
        "node_modules/**/*"
    ],
    "win": {
        "target": "nsis"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    },
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage"
    }
}